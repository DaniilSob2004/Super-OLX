@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="account__login register">
        <div class="account__login--header mb-25">
            <h2 class="account__login--header__title h3 mb-10">Create an Account</h2>
            <p class="account__login--header__desc">Register here if you are a new customer</p>
        </div>
        <div class="account__login--inner">
            <form method="POST" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" enctype="multipart/form-data">
                <div>
                    <label asp-for="Input.FullName"></label>
                    <input asp-for="Input.FullName" class="account__login--input">
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="account__login--input" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="account__login--input" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="account__login--input" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="mb-4">
                    <label for="uploadBox" class="form-label">@Html.DisplayNameFor(model => model.Input.Avatar)</label>
                    <input class="form-control form-control-lg" type="file" id="uploadBox">
                </div>
                <button class="account__login--btn primary__btn mb-10" type="submit">Register</button>
            </form>
        </div>
    </div>

    <div class="col-md-6 col-md-offset-2">
        <section>
            @{
                if ((Model.ExternalLogins?.Count ?? 0) != 0)
                {
                    <h3>Use another service to register.</h3>
                    <hr />
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
